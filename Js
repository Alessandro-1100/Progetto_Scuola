

const square = (num) => num * num;
const pi = Math.PI;

function trigCalc(angleUnit, data) {
  let angleInRadians;
  let conversione;
  // Convert input angle to radians for calculation and vice versa
  if (angleUnit === "sessagesimale") {
    conversione = (pi/180) * data; 
  } else if (angleUnit === "radianti") {
    conversione = (180/pi) * data; 
  } else {
    console.log("Per favore, inserisci 'sessagesimale' o 'radianti'");
    return;
  }

  // making eventual degrees in radiants
  if (angleUnit === "sessagesimale") {
    angleInRadians = conversione
  } else {
    angleInRadians = data
  }
  // Calculate trigonometric functions using the angle in radians
  const seno = Math.sin(angleInRadians);
  const coseno = Math.cos(angleInRadians); // Use Math.cos() directly
  const tangente = Math.tan(angleInRadians); // Use Math.tan() directly
  const coTangente = 1/tangente;
  


  // Return results or make them available
  return {
    conversione,
    seno,
    coseno,
    tangente,
    coTangente,
  };
}

// Test the function
const result = trigCalc("radianti", 3);
console.log("Results:", result);
